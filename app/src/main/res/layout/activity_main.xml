<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="597dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="292dp"
                app:srcCompat="@drawable/comidarecetario" />

            <Button
                android:id="@+id/btnRegistrarReceta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrar Receta" />

            <Button
                android:id="@+id/btnConsultarReceta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Consultar" />

            <EditText
                android:id="@+id/txtURL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint="Receta en la WEB..."
                android:inputType="textPersonName"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/btnNavegar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buscar" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>