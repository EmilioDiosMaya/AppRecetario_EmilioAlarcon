<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoriaComida">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txtIdComida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:visibility="gone" />

            <EditText
                android:id="@+id/txtNombreComida"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Aquí va a aparecer el nombre" />

            <EditText
                android:id="@+id/txtDescripcionComida"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Aquí va a aparecer la descripción" />

            <EditText
                android:id="@+id/txtIngredientesComida"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Aquí van a aparecer los ingredientes" />

            <EditText
                android:id="@+id/txtPreparacionComida"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="30dp"
                android:hint="Aquí va a aparecer la preparación" />

            <ListView
                android:id="@+id/lstComidas"
                android:layout_width="match_parent"
                android:layout_height="378dp"
                android:layout_marginBottom="20dp"></ListView>

            <Button
                android:id="@+id/btnActualizarComida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="0dp"
                android:text="Actualizar" />

            <Button
                android:id="@+id/btnEliminarComida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:text="Eliminar" />

            <Button
                android:id="@+id/btnVolverComida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:text="Volver" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>